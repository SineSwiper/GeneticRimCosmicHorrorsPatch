<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  
 

  
<ThingDef ParentName="BuildingBase">
    <DefName>GR_EldritchGenePod</DefName>
    <label>eldritch genePod</label>
    <ThingClass>Building_WorkTable</ThingClass>
    <Description>Eldritch genetic material samples are combined and grown in this laboratory, a perfect mixture of arcane eldritch magics and technology.</Description>
    <graphicData>
      <texPath>Things/Building/GR_EldritchGenePod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,4)</drawSize>
     
    </graphicData>
    <castEdgeShadows>false</castEdgeShadows>
    <costList>
      <Steel>200</Steel>
      <Component>4</Component>
    </costList>
    <AltitudeLayer>Building</AltitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <Size>(4,4)</Size>
    <DesignationCategory>Production</DesignationCategory>
    <Passability>PassThroughOnly</Passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
   
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
	<comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>210</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <researchPrerequisites><li>GR_EldritchGeneticEngineering</li></researchPrerequisites>
		<designationCategory>GeneticsTab</designationCategory>

</ThingDef>


  
</ThingDefs>